    <div class="jumbotron">
 
          
           <h1>Timeline</h1>
    
  
    </div>

<p class="group">
<a href="/bypeople" class="btn btn-lg btn-default">사람별로 보기</a>
</p>
    <%=form_tag '/write', method: 'post' do %>
   <div class="form-group">
    <textarea name="naeyong" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
    <input type="submit" class="btn btn-info">
    </div>
    <% end %>

<ul>
    <% @blogs.each do |b| %>
        <li>
            <p class="bg-info">
                 <%=b.user.email%>                  
            </p>
            
            <div class="well">
                <%=b.content%>         
                <a href="/edit_content?id=<%=b.id%>">편집</a>
                <a href="/delete_content?id=<%=b.id%>">삭제</a>
            </div>
            
            <%=form_tag '/comment', class: "form-inline" do %>
            <input type="hidden" name="blog_id" value="<%=b.id%>">
            <div class="form-group">
            <input type="text" name="comment" class="form-control">
            </div>
            <div class="form-group">
            <input type ="submit" class="btn btn-warning">
            </div>
            <%end%>
            
            <ol>
            <% b.comments.each do |c| %>
                <li>
                    <%=c.user.email%> : <%=c.msg%> 
                    <a href="/edit_msg?id=<%=b.id%>">편집</a>              
                    <a href="/delete_msg?id=<%=b.id%>">삭제</a>

                </li>
              <%end%>
            </ol>
      </li>
      <%end%>
        
</ul>
